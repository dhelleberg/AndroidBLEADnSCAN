<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.advertising.AdvertisingFragment">


    <TextView
        android:id="@+id/adv_broadcast"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="Adv. enabled: "
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Switch
        android:id="@+id/adv_switch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="@+id/adv_broadcast"
        app:layout_constraintStart_toStartOf="@+id/adv_broadcast"
        app:layout_constraintTop_toBottomOf="@+id/adv_broadcast" />

    <TextView
        android:id="@+id/tv_adv_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:text="Status:"
        app:layout_constraintStart_toEndOf="@+id/adv_broadcast"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/adv_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="TextView"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="@+id/tv_adv_status"
        app:layout_constraintTop_toBottomOf="@+id/tv_adv_status" />

    <TextView
        android:id="@+id/tv_eid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="32dp"
        android:text="Current EID:"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/adv_switch" />

    <TextView
        android:id="@+id/t_current_eid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_eid"
        tools:text="EID" />

</androidx.constraintlayout.widget.ConstraintLayout>